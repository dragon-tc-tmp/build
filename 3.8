# Find Source Root
cd ../ && export TOOLCHAIN_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )";

# Define specifications of remote repositories.
export REMOTE_URL="http://llvm.org/git"
export BRANCH="master"
$TOOLCHAIN_ROOT/build/common sync;

# Export Prefix Path
export PREFIX_PATH=$TOOLCHAIN_ROOT/out/3.8;

# Clean tree
if [ -d $TOOLCHAIN_ROOT/cmake ];
then
  $TOOLCHAIN_ROOT/build/common clean;
fi;

# Set OPT if requested
if [ $1 == "opt" ];
then
    export OPT="-march=native -mtune=native" 
fi;

# Build ISL if required
if ! [ -e $TOOLCHAIN_ROOT/out/isl.made ];
then
    $TOOLCHAIN_ROOT/build/common isl;
fi;

# Set flags for LLVM Compilation
export LOCAL_CXX_FLAGS="-O3 -Wno-macro-redefined -pipe -pthread -fopenmp $OPT"
export LOCAL_C_FLAGS="-O3 -Wno-macro-redefined -pipe -pthread -fopenmp $OPT"

# Compile Toolchain
$TOOLCHAIN_ROOT/build/common build;
